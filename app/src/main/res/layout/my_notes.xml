<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/notestextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="35dp"
        android:text="Welcome to My Notepad"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/noteseditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:lines="6"
        android:maxLines="6"
        android:hint="Enter Your Notes"
        android:inputType="textMultiLine"
        android:layout_below="@+id/notestextView"
        android:gravity="top"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Settings"
        android:textStyle="bold|italic"
        android:layout_below="@+id/noteseditText"
        android:layout_alignLeft="@+id/notestextView"
        android:layout_alignStart="@+id/notestextView"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button"
        android:layout_toEndOf="@+id/notestextView"
        android:layout_toRightOf="@+id/notestextView"
        android:text="Clear Text"
        android:onClick="cleartxt"
        android:textStyle="bold|italic"/>
</RelativeLayout>